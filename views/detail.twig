<title>Detail</title>

{% block head %}
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB" crossorigin="anonymous">
{% endblock %}

{% block body %}
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
        <li class="nav-item active">
          <a class="nav-link" href="/">Home <span class="sr-only">(current)</span></a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/tutor">Tutor</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/examination">Examination</a>
        </li>
        <li class="nav-item">
          <a class="nav-link disabled" href="/about">About</a>
        </li>
      </ul>
      </div>
    </nav>

    <div class="row">
    <div class="col-sm">
      <div class="container">
        
        <div class="card" style="width: 60rem;" >
            <h3>Topic : {{topic_list.title}}</h3>
            <br>
            <li>
              Detail : {{topic_list.detail}}
            </li>
            <br>
            
            <form method="POST" action="/tutor/detail/{{topic_list.id}}">
              <br>
              comment :
              <br>
              <textarea rows="2" cols="30" name="comment_text" placeholder="Enter your comment">
              </textarea>
              <br>
              <input type="submit" name="submit_comment" value="comment">
            </form>
            <h1>Comment:</h1>
            <br>
            {% for i in comment_list %}
              {{i.data}}
              <br>
            <form method="POST" action="/tutor/deleteComment/{{i.id}}">
              <input type="submit" name="delete_comment_button" value="Delete Comment">
            </form>
            {% endfor %}
        </div>
      
      </div>
    </div>

    <div class="col-sm">
      <div class="container">
        
        
          <form method="POST" action="/tutor/deleteTopic/{{topic_list.id}}">
              <input type="submit" name="delete_button" value="Delete Post">
          </form>
        
        
      </div>
    </div>
    </div>



    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js" integrity="sha384-smHYKdLADwkXOn1EmN1qk/HfnUcbVRZyYmZ4qpPea6sjB/pTJ0euyQp0Mk8ck+5T" crossorigin="anonymous"></script>
{% endblock %}
